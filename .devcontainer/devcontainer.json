{
  // Nome exibido no Codespaces/VS Code
  "name": "hacktiba-2025-labs",

  // Imagem base oficial da Microsoft (Python 3.11 j√° pronto)
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  // Comando executado logo ap√≥s o Codespace ser criado ou rebuildado
  "postCreateCommand": "/bin/bash -lc '\
    set -e; \
    echo \"üì¶ Atualizando pip...\"; \
    python -m pip install --upgrade pip; \
    \
    echo \"üìÇ Instalando depend√™ncias de todos os labs com requirements.txt...\"; \
    for req in lab*/requirements.txt; do \
      if [ -f \"$req\" ]; then \
        echo \"‚û°Ô∏è  Instalando $req\"; \
        pip install -r \"$req\" || echo \"‚ö†Ô∏è Falhou em $req (continuando)\"; \
      fi; \
    done; \
    \
    echo \"‚úÖ Ambiente pronto.\" \
  '",

  // Customiza√ß√µes de editor (extens√µes no VS Code dentro do Codespace)
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",     // Suporte a Python
        "ms-python.vscode-pylance" // IntelliSense e autocomplete
      ]
    }
  }
}
